<Window x:Class="ServerWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerWorker"
        mc:Ignorable="d"
        Title="vikDIANA WORKER" Height="650" Width="525"
        Icon="/Resources/sickle-and-hammer.png">

    <Window.Background>
        <SolidColorBrush Color="#ECEFF1">
        </SolidColorBrush>
    </Window.Background>

    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" Margin="10, 0, 10, 10">DIANA VERSION</Label>
        <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" Margin="10, 10, 10, 0">
            <ComboBox Name="diana_version">
                <ComboBoxItem Selector.IsSelected="True">DIANA 10.1</ComboBoxItem>
                <ComboBoxItem>DIANA 10.0</ComboBoxItem>
                <ComboBoxItem>DIANA DEV.0</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!--<Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,161,0">Elapsed time current calculation:</Label>-->
        <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" x:Name="elapsedTime"></Label>

        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" Style="{StaticResource Label_bold}">Path to .dat file</Label>
        <Label Grid.Column="0" Grid.Row="2" Name="path_dat" VerticalAlignment="Top" Grid.ColumnSpan="2"></Label>
        <Button Grid.Column="1" Grid.Row="1" Click="add_path" Margin="10, 10, 10, 10">Choose path</Button>
        <Button Grid.Column="2" Grid.Row="2" Click="add_job" Margin="10, 10, 10, 10">Add job</Button>
        <Button Grid.Column="2" Grid.Row="1" Click="remove_last" Margin="10, 10, 10, 10">Remove last job</Button>
        

        <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Bottom" Margin="10, 0, 0, 0" Style="{StaticResource Label_bold}">Queue</Label>

        <RichTextBox x:Name="queueTextbox" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"
                     Grid.RowSpan="2" Margin="10, 10, 10, 10" >
            <FlowDocument/>
        </RichTextBox>


        <Label Grid.Column="0" Grid.Row="5" VerticalAlignment="Bottom" Margin="10, 0, 0, 0" Style="{StaticResource Label_bold}">Output box</Label>
        <RichTextBox x:Name="outputBox" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="6"
                     Grid.RowSpan="5" Margin="10, 10, 10, 10" >
            <FlowDocument/>
        </RichTextBox>
        
      
    </Grid>
    
    
</Window>
